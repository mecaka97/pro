#include<stdio.h>
 
int main()
{
int a[10][10],b[10][10],c[10][10],i,j,m,n;
printf("Satir ve sutun sayilari nedir?");
scanf("%d%d",&m,&n);
printf("\nIlk matrisi gir:\n");
for(i=0;i<m;++i)
for(j=0;j<n;++j)
scanf("%d",&a[i][j]);
printf("\nikinci matrisi gir:\n");
for(i=0;i<m;++i)
for(j=0;j<n;++j)
scanf("%d",&b[i][j]);
printf("\ntoplam:\n");
for(i=0;i<m;++i)
{
for(j=0;j<n;++j)
{
c[i][j]=a[i][j]+b[i][j];
printf("%d ",c[i][j]);
}
printf("\n");
}
 
return 0;
}
